<div class="playlist_title ui raised very padded text container segment">
  <p id="username_header"><%= @user.display_name %> - <%= @user.username %></p>

  <div id="spotify_link"><% if @user.id == session[:user_id] %>
    <% if current_user.spot_hash.empty? %>
      <p class="spotify_link"><%= link_to 'Sign in with Spotify', '/auth/spotify' %></p>
    <% else %>
      <p>Connected to a Spotify account.</p>
    <% end %>
  <% end %>
  </div>
</div>
<br>
<br>

<div class="ui raised very padded text container segment">
<h3 id="user_playlist">User's Playlists</h3>
<br>
  <div id="each_playlist"><% @user.playlists.each do |playlist| %>
    <%= link_to playlist.name, playlist %><br>
  <% end %>
</div>
</div>
