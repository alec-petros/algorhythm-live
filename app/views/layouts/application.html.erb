<!DOCTYPE html>
<html>
  <head>
    <title>SpotifyPlaylister</title>
    <%= csrf_meta_tags %>

    <title>Semantic UI CDN</title>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/1.11.8/semantic.min.css"/>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/1.11.8/semantic.min.js"></script>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="ui huge header">Huge Header</div>

    <div class="ui left vertical menu sidebar">
      <a class="item"><%= link_to 'Home', '/' %></a>
      <%= link_to 'Profile', "/users/#{session[:user_id]}" %><br>
      <%= link_to "New Playlist", "/playlists/new" %><br>
      <% if !logged_in? %>
        <%= link_to "Login", "/login", method: "get" %>
      <% else %>
        <%= link_to "Logout", "/logout", method: "get" %>
      <% end %>
    </div>


    <div class="pusher">
      <%= yield %>
    </div>
  </body>
</html>
