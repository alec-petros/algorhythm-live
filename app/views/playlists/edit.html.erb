<%= form_tag "/playlists/#{@playlist.id}/edit_fix", method: "post" do %>
  <%= label_tag :name %>
  <%= text_field_tag :name, value = @playlist.name %>
  <br>
  <%= label_tag "Artists (Separate by commas)" %>
  <%= text_field_tag :artists, value = @playlist.artists_string %>
  <br>
  <%= label_tag "Tracks (Separate by commas)" %>
  <%= text_field_tag :tracks, value = @playlist.tracks_string %>
  <br>
  <%= label_tag "Genres (Separate by commas)" %>
  <%= text_field_tag :genres, value = @playlist.genres_string %>
  <br>
  <%= submit_tag "Create Seed" %>
<% end %>
