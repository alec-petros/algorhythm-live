<div class="ui raised very padded text container segment">


<h1><%= @playlist.name %></h1>
<div class="ui divider"></div>
<% if !current_user.spot_hash.empty? %>
  <%= form_tag "/playlists/#{@playlist.id}/save", method: "post" do %>
    <%= hidden_field_tag "uri_arr", @uri_array %>
    <%= submit_tag "Save Playlist to Spotify", class: "ui button" %>
  <% end %>
<% else %>
  <p><%= link_to 'Sign in with Spotify to create a Spotify playlist', '/auth/spotify' %></p>
<% end %>
<ul>
  <% @playlist_array.each do |track| %>
    <li><%= "#{track.name} - #{track.artists[0].name}" %></li>
  <% end %>
</ul>

</div>
